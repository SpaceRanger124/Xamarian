<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/starry_sky"
        tools:context=".MainActivity">
    <Button
            android:text="Log in"
            android:layout_width="113dp"
            android:layout_height="46dp"
            android:id="@+id/login_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
            android:layout_marginTop="292dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@android:color/background_light"
            android:ems="10"
            android:id="@+id/username"
            android:hint="username" android:layout_marginTop="148dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@android:color/background_light"
            android:ems="10"
            android:id="@+id/password" android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="password"/>
</androidx.constraintlayout.widget.ConstraintLayout>