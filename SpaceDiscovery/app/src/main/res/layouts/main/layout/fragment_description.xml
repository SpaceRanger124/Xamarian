<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/main_background">

    <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Space Discovery"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/colorYellowDark"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_planet"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name" />

    <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:text="The application is used for astronauts.
                \nIt allows users to:
                \n   - locate their current position;
                \n   - look at the map of the galaxy;
                \n   - get information about celestial bodies;
                \n   - communicate with others.
                \n\nSelect the required item in the menu
                \non the top left.
                \n\n\n\n\n"
            android:textColor="@color/colorOrange"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>