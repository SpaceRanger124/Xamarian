<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#345345"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/id_label"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="id:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@android:color/white"
        android:id="@+id/id"
        app:layout_constraintTop_toBottomOf="@id/id_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="123"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/name_label"
        app:layout_constraintTop_toBottomOf="@id/id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="name:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@android:color/white"
        android:enabled="false"
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Mazda"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/producer_id_label"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="producer id:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@android:color/white"
        android:enabled="false"
        android:id="@+id/producer_id"
        app:layout_constraintTop_toBottomOf="@id/producer_id_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="123"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/price_label"
        app:layout_constraintTop_toBottomOf="@id/producer_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="price:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@android:color/white"
        android:enabled="false"
        android:id="@+id/price"
        app:layout_constraintTop_toBottomOf="@id/price_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="3000"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/year_label"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="year:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:background="@android:color/white"
        android:enabled="false"
        android:id="@+id/year"
        app:layout_constraintTop_toBottomOf="@id/year_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="1990"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/edit_automobile"
        android:text="Edit"
        app:layout_constraintTop_toBottomOf="@id/year"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/remove_automobile"
        android:text="Remove"
        app:layout_constraintTop_toBottomOf="@id/edit_automobile"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>